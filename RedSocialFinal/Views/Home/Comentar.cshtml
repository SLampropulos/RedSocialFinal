@model RedSocialFinal.Models.Comentario
@{
    ViewData["Title"] = "Comentar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Comentar</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Comentar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="contenido" class="control-label"></label>
                <input asp-for="contenido" class="form-control" />
                <span asp-validation-for="contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idUsuario" class="control-label" hidden></label>
                <select asp-for="idUsuario" class ="form-control" hidden asp-items="ViewBag.idUsuario"></select>
            </div>
            <div class="form-group">
                <label asp-for="idPost" class="control-label" hidden></label>
                <select asp-for="idPost" class ="form-control" hidden asp-items="ViewBag.idPost"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Comentar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PostAmigos">Volver a publicaciones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}