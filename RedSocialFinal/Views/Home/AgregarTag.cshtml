@model RedSocialFinal.Models.Tag

@{
    ViewData["Title"] = "AgregarTag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar Tag</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarTag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="palabra" class="control-label"></label>
                <input asp-for="palabra" class="form-control" />
                <span asp-validation-for="palabra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MisPublicaciones">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

